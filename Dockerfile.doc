FROM ocaml/opam:debian-stable_ocaml-4.03.0
RUN cd /home/opam/opam-repository && git pull origin master && opam update
RUN opam remote add mirage-dev https://github.com/mirage/mirage-dev.git
RUN opam pin add -n odig https://github.com/dbuenzli/odig.git
RUN opam depext -uivy -j 2 odig
RUN opam depext -uivj 3 \
  alcotest \
  angstrom \
  arp \
  asn1-combinators \
  astring \
  base64 \
  channel \
  charrua-core \
  charrua-unix \
  cmdliner \
  cohttp \
  conduit \
  core_kernel \
  cow \
  cowabloga \
  cpuid \
  crunch \
  cstruct \
  ctypes \
  ctypes-foreign \
  datakit \
  datakit-client \
  datakit-github \
  dns \
  dockerfile \
  duration \
  ezxmlm \
  fat-filesystem \
  functoria \
  git \
  git-mirage \
  git-unix \
  github \
  hex \
  hkdf \
  hvsock \
  io-page \
  ipaddr \
  irmin \
  irmin-watcher \
  jenga \
  logs \
  logs-syslog \
  lwt \
  magic-mime \
  merlin \
  mirage \
  mirage-block \
  mirage-block-ccm \
  mirage-block-unix \
  mirage-block-ramdisk \
  mirage-block-xen \
  mirage-bootvar-xen \
  mirage-btrees \
  mirage-clock-unix \
  mirage-clock-xen \
  mirage-console \
  mirage-dns \
  mirage-entropy \
  mirage-flow \
  mirage-fs-unix \
  mirage-http \
  mirage-logs \
  mirage-net-unix \
  mirage-net-xen \
  mirage-os-shim \
  mirage-stdlib-random \
  mirage-unix \
  mirage-vnetif \
  mirage-xen \
  nocrypto \
  ocb-stubblr \
  ocplib-endian \
  otr \
  parse-argv \
  pbkdf \
  pcap-format \
  ppx_expect \
  protocol-9p \
  ptime \
  qcow-format \
  randomconv \
  rresult \
  scrypt-kdf \
  session \
  shared-memory-ring \
  syslog-message \
  tar-format \
  tcpip \
  tls \
  tlstunnel \
  topkg \
  topkg-care \
  tuntap \
  tyxml-ppx \
  uri \
  vchan \
  vhd-format \
  webmachine \
  websocket \
  x509 \
  xen-evtchn \
  xen-gnt \
  xenctrl \
  xenstore
RUN opam config exec -- odig ocamldoc
RUN opam pin add -n octavius git://github.com/ocaml-doc/octavius
RUN opam pin add -n doc-ock git://github.com/ocaml-doc/doc-ock
RUN opam pin add -n doc-ock-xml git://github.com/ocaml-doc/doc-ock-xml
RUN opam pin add -n doc-ock-html git://github.com/ocaml-doc/doc-ock-html
RUN opam pin add -n odoc git://github.com/ocaml-doc/odoc
RUN opam depext -uivy -j 2 odoc
RUN opam config exec -- odig odoc
RUN ln -s /home/opam/.opam/4.03.0/var/cache/odig/odoc /home/opam/.opam/4.03.0/var/cache/odig/ocamldoc/odoc
EXPOSE 8080
ENTRYPOINT opam config exec -- cohttp-server-lwt /home/opam/.opam/4.03.0/var/cache/odig/ocamldoc
